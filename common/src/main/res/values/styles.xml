<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Exists for inheritance purposes -->
    <style name="Akvarel" parent="Akvarel.Base" />

    <style name="Akvarel.Base" parent="Theme.AppCompat.Light.NoActionBar">
